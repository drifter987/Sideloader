{
    "name": "cli-frontend",
    "targetType": "executable",
    "targetPath": "../../bin/",
    "targetName": "sideloader",

    "sourcePaths": [
        "source/"
    ],

    "dependencies": {
        "sideloader": { "path": "../../" },
        "argparse": "~>1.3.0",
        "progress": "~>5.0.2",
        "slf4d": "~>2"
    },
    "dflags-ldc": [
        "--link-defaultlib-shared=false",
        "--disable-gc2stack"
    ],
    
    "lflags-osx": [
        "-lpthread"
    ],

    "dflags-gdc": [
        "-defaultlib=:libgphobos.a"
    ]
}